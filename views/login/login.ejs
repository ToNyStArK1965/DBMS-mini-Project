<body class="body1 body_login">

  <form class="form-signin" action="/userlogin" method="post">
    <div class="text-center mb-4">
      <img class="mb-4" src="img/avatar.svg" alt="" width="72" height="72">
      <h1 class="h1 mb-3 font-weight-bold login_h1">User Login</h1>
    </div>

    <% if(message === 'User successfully Registered' ){ %>
    <div class="alert alert-success" role="alert">
      <%=message%>
    </div>
    <% } %>

    <% if(message === 'Successfully Loged Out âœ”' ){ %>
    <div class="alert alert-success" role="alert">
      <%=message%>
    </div>
    <% } %>

    <% if(message === 'Please login to view this page!'){ %>
    <div class="alert alert-danger" role="alert">
      <%=message%>
    </div>
    <% } %>

    <div class="form-label-group">
      <input type="text" id="inputEmail" name="username" class="form-control" placeholder="Email address" autocomplete="off" autofocus>
      <label for="inputEmail">Username</label>
    </div>

    <div class="form-label-group">
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password">
      <label for="inputPassword">Password</label>
    </div>

    <% if(message === 'Incorrect Username and/or Password!' || message === 'Please enter Username and Password!'){ %>
    <div class="alert alert-danger" role="alert">
      <%=message%>
    </div>
    <% } %>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>


  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
