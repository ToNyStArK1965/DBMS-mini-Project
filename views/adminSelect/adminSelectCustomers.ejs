<body class="body-admin-pages">
  <div class="container" style="margin-top: 30px;">
    <div class="jumbotron admin-select-jumbo">
      <div class="container">

        <table class="table table-responsive table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Id</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Address</th>
              <th scope="col">Phone_no</th>
              <th scope="col">city</th>
              <th scope="col">State</th>
              <th scope="col">Pincode</th>
		      <th scope="col">Username</th>
		      <th scope="col">Password</th>
              <th scope="col">Account Number</th>
            </tr>
          </thead>

          <tbody>

            <%	customers_data.forEach(function(data){ %>
            <tr>
              <td class="admin-select-td"> <%= data.customer_id %> </td>
              <td class="admin-select-td"> <%= data.customer_fname %> </td>
              <td class="admin-select-td"> <%= data.customer_lname %> </td>
              <td class="admin-select-td"> <%= data.customer_address %> </td>
              <td class="admin-select-td"> <%= data.customer_phone_number %> </td>
              <td class="admin-select-td"> <%= data.customer_city %> </td>
              <td class="admin-select-td"> <%= data.customer_state %> </td>
              <td class="admin-select-td"> <%= data.customer_pincode %> </td>
			  <td class="admin-select-td"> <%= data.customer_username %> </td>
			  <td class="admin-select-td"> <%= data.customer_pass %> </td>
              <td class="admin-select-td"> <%= data.account_number %> </td>
            </tr>
            <% })%>

          </tbody>
        </table>

      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
