<body class="body-admin-pages">
  <div class="container" style="margin-top: 30px;">

    <div class="jumbotron jumbotron_welcome">
      <div class="container">
        <h1 class="display-4 login_h1">Update User Account</h1>
        <hr class="my-4">

        <form action="/adminUpdateUser" method="post">

          <div class="col-sm-5">

            <% if(message === 'Account Successfully Updated âœ”' ){ %>
            <div class="alert alert-success" role="alert">
              <%=message%>
            </div>
            <% } %>

            <% if(message === 'Account Number does not exists' ){ %>
            <div class="alert alert-danger" role="alert">
              <%=message%>
            </div>
            <% } %>

            <% if(message === 'Invalid Electric Board Name!'){ %>
            <div class="alert alert-danger" role="alert">
              <%=message%>
            </div>
            <% } %>

            <% if(message === 'No fields should not be left empty!'){ %>
            <div class="alert alert-danger" role="alert">
              <%=message%>
            </div>
            <% } %>

            <div class="form-group">
              <label class="label-register">Account Number </label>
              <input type="text" name="account_no" class="form-control" placeholder="Enter 5 digit Account Number" autocomplete="off">
            </div>

            <div class="form-group">
              <label class="label-register">First Name</label>
              <input type="text" name="fname" class="form-control" placeholder="First Name" autocomplete="off">
            </div>

            <div class="form-group">
              <label class="label-register">Last Name</label>
              <input type="text" name="lname" class="form-control" placeholder="Last Name" autocomplete="off">
            </div>

            <div class="form-group">
              <label class="label-register">DOB</label>
              <input type="date" name="dob" class="form-control" autocomplete="off">
            </div>

            <div class="form-group">
              <label class="label-register">Address</label>
              <input type="text" name="address" class="form-control" placeholder="Address" autocomplete="off">
            </div>

            <div class="form-group">
              <label class="label-register">Electric Board ID</label>
              <input type="text" name="board_name" class="form-control" value="BESCOM" autocomplete="off">
            </div>

            <button type="submit" class="btn btn-primary"> Update </button>
          </div>

        </form>

      </div>
    </div>
  </div>

