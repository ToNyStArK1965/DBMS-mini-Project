<body class="body-user">
  <div class="container">
    <div class="jumbotron user-jumbo">
      <div class="container">

        <table class="table table-responsive table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Bill Nummber</th>
              <th scope="col">RR Number</th>
              <th scope="col">Consumption Unit</th>
              <th scope="col">Bill Amount</th>
              <th scope="col">Tax</th>
              <th scope="col">Total Bill Amount</th>
              <th scope="col">Due Date</th>
              <th scope="col">Paid Amount</th>
              <th scope="col">Payment Status</th>
              <th scope="col">Payment Date</th>
            </tr>
          </thead>

          <tbody>

            <tr>
              <td> <%= bill_data[0].bill_no %> </td>
              <td> <%= bill_data[0].rr_no %> </td>
              <td> <%= bill_data[0].consumption_unit %> </td>
              <td> <%= bill_data[0].bill_amount %> </td>
              <td> <%= bill_data[0].tax %> </td>
              <td> <%= bill_data[0].total_bill_amount %> </td>
              <td> <%= bill_data[0].due_date %> </td>
              <td> <%= bill_data[0].paid_amount %> </td>
              <td> <%= bill_data[0].payment_status %> </td>
              <td> <%= bill_data[0].payment_date %> </td>
            </tr>

          </tbody>
        </table>

      </div>
    </div>

  </div>

  <div class="container" style="margin-top: 30px;">
    <div class="jumbotron user-jumbo">
      <div class="container">

        <form action="/userViewBill" method="post">

          <div class="col-sm-4">

            <h3 class="display-7"> Pay Bill </h3>
            <hr class="my-4">


            <div class="form-label-group">
              <input type="text" id="inputEmail" name="bill_no" class="form-control" placeholder="Bill Number" autocomplete="off" autofocus>
              <label for="inputEmail">Bill Number</label>
            </div>

            <div class="form-label-group">
              <input type="text" id="inputPassword" name="paid_amount" class="form-control" placeholder="Ammount">
              <label for="inputPassword">Amount</label>
            </div>

            <button type="submit" class="btn btn-primary"> Pay Bill </button>

          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
