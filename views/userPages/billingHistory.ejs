<body class="body-user">
  <div class="container">
    <div class="jumbotron user-jumbo">
      <div class="container">

        <table class="table table-responsive table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Bill Nummber</th>
              <th scope="col">RR Number</th>
              <th scope="col">Consumption Unit</th>
              <th scope="col">Bill Amount</th>
              <th scope="col">Tax</th>
              <th scope="col">Total Bill Amount</th>
              <th scope="col">Due Date</th>
              <th scope="col">Paid Amount</th>
              <th scope="col">Payment Status</th>
              <th scope="col">Payment Date</th>
            </tr>
          </thead>

          <tbody>

            <%	bill_data.forEach(function(data){ %>
            <tr>
              <td> <%= data.bill_no %> </td>
              <td> <%= data.rr_no %> </td>
              <td> <%= data.consumption_unit %> </td>
              <td> <%= data.bill_amount %> </td>
              <td> <%= data.tax %> </td>
              <td> <%= data.total_bill_amount %> </td>
              <td> <%= data.due_date %> </td>
              <td> <%= data.paid_amount %> </td>
              <td> <%= data.payment_status %> </td>
              <td> <%= data.payment_date %> </td>
            </tr>
            <% })%>

          </tbody>
        </table>

      </div>
    </div>

  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
